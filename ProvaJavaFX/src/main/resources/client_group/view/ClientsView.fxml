<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="client_group.controller.ClientController">

    <!-- TOP HEADER BAR -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Client List" style="-fx-font-size: 18px;" />
        </HBox>
    </top>

    <!-- CENTER TABLE -->
    <center>
        <TableView fx:id="clientTable" prefHeight="300" prefWidth="600">
            <columns>
                <TableColumn fx:id="pivaCol" text="P.IVA" prefWidth="100" />
                <TableColumn fx:id="companyNameCol" text="Company Name" prefWidth="200" />
                <TableColumn fx:id="emailCol" text="Email" prefWidth="200" />
                <TableColumn fx:id="phoneCol" text="Phone" prefWidth="150" />
            </columns>
        </TableView>
    </center>

    <!-- BOTTOM BUTTONS + STATUS -->
    <bottom>
        <VBox spacing="5">
            <HBox alignment="CENTER" spacing="10">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                <Button text="Refresh" onAction="#handleRefresh"/>
                <Button text="Add New" onAction="#handleAdd"/>
                <Button text="Edit" onAction="#handleEdit"/>
                <Button text="Delete Selected" onAction="#handleDelete"/>
            </HBox>
            <Label fx:id="statusLabel" alignment="CENTER" />
        </VBox>
    </bottom>

</BorderPane>
