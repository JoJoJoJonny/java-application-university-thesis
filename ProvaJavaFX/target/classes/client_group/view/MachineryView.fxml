<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="client_group.controller.MachineryController">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Machinery Inventory" style="-fx-font-size: 18px;" />
        </HBox>
    </top>

    <center>
        <TableView fx:id="machineryTable" prefHeight="300" prefWidth="600">
            <columns>
                <TableColumn fx:id="idCol" text="ID" prefWidth="75" />
                <TableColumn fx:id="nameCol" text="Name" prefWidth="250" />
                <TableColumn fx:id="buyDateCol" text="Buy Date" prefWidth="200" />
                <TableColumn fx:id="yearManufactureCol" text="Year Manufacture" prefWidth="200" />
                <TableColumn fx:id="capacityCol" text="Capacity" prefWidth="150"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <VBox spacing="5">
            <HBox alignment="CENTER" spacing="10">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                <Button text="Refresh" onAction="#handleRefresh"/>
                <Button text="Add New" onAction="#handleAdd"/>
                <Button text="Edit" onAction="#handleEdit" />
                <Button text="Delete Selected" onAction="#handleDelete"/>
            </HBox>
            <Label fx:id="statusLabel" alignment="CENTER" />
        </VBox>
    </bottom>

</BorderPane>
