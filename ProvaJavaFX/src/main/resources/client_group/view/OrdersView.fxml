<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="client_group.controller.OrderController">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Orders Management" style="-fx-font-size: 18px;" />
        </HBox>
    </top>

    <center>
        <TableView fx:id="orderTable" prefHeight="400" prefWidth="800">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" prefWidth="50" />
                <TableColumn fx:id="createDateColumn" text="Create Date" prefWidth="100" />
                <TableColumn fx:id="deadlineColumn" text="Deadline" prefWidth="100" />
                <TableColumn fx:id="quantityColumn" text="Quantity" prefWidth="75" />
                <TableColumn fx:id="clientPivaColumn" text="Client P.IVA" prefWidth="120" />
                <TableColumn fx:id="modelNameColumn" text="Model Name" prefWidth="150" />
                <TableColumn fx:id="startDateColumn" text="Start Date" prefWidth="120" />
                <TableColumn fx:id="endDateColumn" text="End Date" prefWidth="120" />
                <TableColumn fx:id="statusColumn" text="Status" prefWidth="100" />
            </columns>
        </TableView>
    </center>

    <bottom>
        <VBox spacing="5">
            <HBox alignment="CENTER" spacing="10">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                <Button fx:id="addButton" text="Add New" onAction="#handleAdd"/>
                <Button fx:id="editButton" text="Edit" onAction="#handleEdit"/>
                <Button fx:id="refreshButton" text="Refresh" onAction="#handleRefresh"/>
                <Button fx:id="inProductionButton" text="Put in Production" onAction="#handleInProduction"/>
                <Button fx:id="completeButton" text="Complete" onAction="#handleComplete"/>
                <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancel"/>
            </HBox>
            <Label fx:id="statusLabel" alignment="CENTER" />
        </VBox>
    </bottom>

</BorderPane>
