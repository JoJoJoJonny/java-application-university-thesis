<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" spacing="30.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="client_group.controller.HomeController">
    <padding>
        <Insets top="40" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Job Manager" style="-fx-font-size: 28px; -fx-font-weight: bold;" />

    <HBox spacing="60" alignment="CENTER">
        <!-- Custom User -->
        <VBox spacing="15" alignment="CENTER">
            <Label text="Custom User" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <Button text="Login" onAction="#onCustomUserLogin"/>
            <Button text="Register" onAction="#onCustomUserRegister"/>
        </VBox>
    </HBox>
</VBox>
