<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>



<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="client_group.controller.NoticeBoardController">

<center>
    <ScrollPane fx:id="scrollPane" xmlns:fx="http://javafx.com/fxml"
                fitToWidth="true">
        <content>
            <VBox fx:id="rootContainer" spacing="20" prefWidth="Infinity">

                <!-- Sezione: Personal -->
                <VBox fx:id="personalSection" spacing="10">
                    <Label text="Personal Notices:" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                    <GridPane fx:id="personalGrid" hgap="15" vgap="15">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="25"/>
                            <ColumnConstraints percentWidth="25"/>
                            <ColumnConstraints percentWidth="25"/>
                            <ColumnConstraints percentWidth="25"/>
                        </columnConstraints>
                    </GridPane>
                </VBox>

                <!-- Sezione: Ritardi -->
                <VBox fx:id="delaySection" spacing="10">
                    <Label text="Delay Notices:" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                    <GridPane fx:id="delayGrid" hgap="15" vgap="15">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="25"/>
                            <ColumnConstraints percentWidth="25"/>
                            <ColumnConstraints percentWidth="25"/>
                            <ColumnConstraints percentWidth="25"/>
                        </columnConstraints>
                    </GridPane>
                </VBox>

                <!-- Sezione: Annunci Employee -->
                <VBox fx:id="employeeSection" spacing="10">
                    <Label text="Employees Notices:" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                    <GridPane fx:id="employeeGrid" hgap="15" vgap="15">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="25"/>
                            <ColumnConstraints percentWidth="25"/>
                            <ColumnConstraints percentWidth="25"/>
                            <ColumnConstraints percentWidth="25"/>
                        </columnConstraints>
                    </GridPane>
                </VBox>

                <!-- Sezione: Annunci Manager -->
                <VBox fx:id="managerSection" spacing="10">
                    <Label text="Manager Notices:" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                    <GridPane fx:id="managerGrid" hgap="15" vgap="15">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="25"/>
                            <ColumnConstraints percentWidth="25"/>
                            <ColumnConstraints percentWidth="25"/>
                            <ColumnConstraints percentWidth="25"/>
                        </columnConstraints>
                    </GridPane>
                </VBox>

                <!-- Sezione: Annunci Accountant -->
                <VBox fx:id="accountantSection" spacing="10">
                    <Label text="Accountant Notices:" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                    <GridPane fx:id="accountantGrid" hgap="15" vgap="15">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="25"/>
                            <ColumnConstraints percentWidth="25"/>
                            <ColumnConstraints percentWidth="25"/>
                            <ColumnConstraints percentWidth="25"/>
                        </columnConstraints>
                    </GridPane>
                </VBox>

                <!-- Sezione: Annunci Other -->
                <VBox fx:id="otherSection" spacing="10">
                    <Label text="Other Notices:" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                    <GridPane fx:id="otherGrid" hgap="15" vgap="15">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="25"/>
                            <ColumnConstraints percentWidth="25"/>
                            <ColumnConstraints percentWidth="25"/>
                            <ColumnConstraints percentWidth="25"/>
                        </columnConstraints>
                    </GridPane>
                </VBox>

            </VBox>
        </content>
    </ScrollPane>
</center>

<bottom>
    <VBox spacing="5">
        <HBox alignment="CENTER" spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button text="Refresh" onAction="#handleRefresh"/>
            <Button text="Add New" onAction="#handleAdd"/>
            <Button fx:id="deleteButton" text="Delete Selected" onAction="#handleDelete"/>
        </HBox>
        <Label fx:id="statusLabel" alignment="CENTER" />
    </VBox>
</bottom>

</BorderPane>



